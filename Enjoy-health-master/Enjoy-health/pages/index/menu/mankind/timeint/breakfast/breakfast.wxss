/* 右边tab容器整体布局 */
.tab-wrapper{
    display: flex;
    flex-direction: column;
}
/* 图片与文字容器设置 */
.pic-cont{
    display: flex;
    flex-direction: row;
    /* border: 1rpx solid #FF4040; */
    border-radius: 25rpx;
    width: 400rpx;
    height: 150rpx;
    margin-top: 20rpx;
    margin-left: -26rpx;
    background-color: #FFF;
    padding: 10rpx;
}
/* 图片设置 */
.picture{
    border-radius: 25rpx;
    width: 150rpx;
    height: 150rpx;
}
/* 文字容器 */
.wordcon{
    width: 240rpx;
    margin-left: 8rpx;
    overflow:hidden;    /*超出一行文字自动隐藏*/
    text-overflow:ellipsis; /*文字隐藏后添加省略号*/
}
/* 食物名称 */
.foodname{
    font-size: 37rpx;
    width: 222rpx;
    height: 54rpx;
    font-family: emoji;
    font-weight: 600;
}
/* 食物介绍 */
.introduce{
    margin-top: 5rpx;
    font-size: 25rpx;
    height: 40rpx;
    width: 184rpx;
    padding: 3rpx;
    line-height: 46rpx;
    color: rgb(213,142,60);
    background-color: rgb(255,247,224);
    border-radius: 14rpx;
}
/* 点击效果 */
.foodbox :hover{
    box-shadow: #ccc;
}
