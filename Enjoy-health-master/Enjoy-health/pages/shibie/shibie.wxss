.mini-btn{
    margin: 0 4px;
}
.weui-btn{position:relative;display:block;width:120px;margin-left:auto;margin-right:auto;padding:8px 24px;box-sizing:border-box;font-weight:700;font-size:17px;text-align:center;text-decoration:none;color:#fff;line-height:1.41176471;border-radius:4px;-webkit-tap-highlight-color:rgba(0,0,0,0);overflow:hidden}.weui-btn_block{width:auto}.weui-btn_inline{display:inline-block}

page{
    background-color: #fff;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}

.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__hd {
    padding: 10px; 
      
}

.age__hd_image{
    display:flex;                  
    justify-content: center;    

}
.age__hd_image image{
    width: 300px;
    height: 200px;
}

.page__title {
    text-align: left;
    font-size: 25px;
    font-weight: 400;
    display: flex;    /*设置显示样式**/
    justify-content: center; /**内容居中*/
    flex-direction:row;
    padding-bottom: 20px;
}

.page__desc {
    color: #888888;
    text-align: left;
    font-size: 14px;
    display: flex;    /*设置显示样式**/
    justify-content: center; /**内容居中*/
    flex-direction:row;
}

.upload {
  display: flex;
  flex-direction: row;
}


.upload_button {
  flex:1;
  height:50px;
  width: 20px;
}


icon{
    margin-right: 13px;
    padding-left: 40px;
}
.page__bd {
    padding-left: 40px;
    padding-right: 40px;
    text-align: left;
}
.icon-box{
    margin-bottom: 25px;
    display: flex;
    align-items: center;
}
.icon-box__ctn{
    flex-shrink: 100;
}
.icon-box__title{
    font-size: 17px;
}
.icon-box__desc{
    margin-top: 6px;
    font-size: 14px;
    color: #888888;
}
.icon_sp_area {
    margin-top: 10px;
    text-align: left;
}

.recognition_btn {
  padding-top: 10px;
  padding-right: 30px;
  padding-left: 30px;
}

/* 结果区 */
.baikeinfo {
    padding: 20rpx;
    margin: 20rpx 20rpx;
    display: flex;
    flex-direction: row;
    box-shadow: 0rpx 2rpx 4rpx 4rpx #074d41;
    height: 500rpx;
    width: auto;
    background: #1a8e84;
    border-radius: 20rpx;
  }

.title {
    margin-top: 30rpx;
    font-size: 26px;
    color: rgb(0, 73, 63);
    text-align: center;
    font-family: fantasy;
    font-weight: bolder;
  }
  
  .baikecard {
    /* display: flex; */
    flex-direction: column;
    color: #fff;
    text-align: center;
  }
  
  .baikecontent {
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
  
    font-size: 20px;
    color: #fff;
    margin: 30rpx 20rpx;
    line-height: 62rpx;
    font-family: monospace;
  }

  /* 从左往右渐变 */
.bt_2{
    margin-top: 24rpx;
    background: linear-gradient(to right, #ead6ee, #a0f1ea); 
  }